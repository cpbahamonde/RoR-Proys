<p style="color: green"><%= notice %></p>

  <div class="card ">
    <div class="card-body">
      <p>
        <strong>Grupo:</strong>
        <%= @concert.group_name %>
      </p>

      <p>
        <strong>Asistentes:</strong>
        <%= @concert.attendance %> Personas
      </p>

      <p>
        <strong>Duracion:</strong>
        <%= @concert.duration %> Horas
      </p>

      <p>
        <strong>Ubicacion:</strong>
        <%= @concert.place %>
      </p>

      <p>
        <strong>Fecha:</strong>
          <%= l @concert.date, format: "%d-%b-%Y" %>
      </p>
    </div>
  </div>

<div>
  <%= link_to "Editar Concierto", edit_concert_path(@concert) %> 
  <%= link_to "Volver a Conciertos", concerts_path %>

  <%= button_to "Eliminar Concierto", @concert, method: :delete %>
</div>

  <div class="collapse navbar-collapse d-flex justify-content-around">
    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
      <li class="nav-item mx-3">
        <%= link_to "Editar Concierto", edit_concert_path(@concert) %>
      </li>
      <li class="nav-item mx-3">
        <%= link_to "Volver a Grupos", groups_path %>
      </li>
      <li class="nav-item mx-3">
        <%= button_to "Eliminar Grupo", @group, method: :delete %>
      </li>
      
    </ul>
  </div>