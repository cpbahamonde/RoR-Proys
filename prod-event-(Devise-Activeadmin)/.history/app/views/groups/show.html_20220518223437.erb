<p style="color: green"><%= notice %></p>


        <div class="card border-success mb-3 card h-100 w-100" >
          <div class="card-header bg-transparent border-success">
              <h2><strong><%= @group.name %></strong></h2>
          </div>
          <div class="card-body text-success">
            <h5 class="card-title"><strong>Debut: <%= @group.debut_date %></strong></h5>
            <p class="card-text">
            
              <p><strong>Integrantes: <%= @group.crew %></strong></p>
              <p><strong>Group type:  <%= @group.group_type %></strong></p>
              <th>Concerts: </th>
                <td>
                    <ul>
                      Conciertos: <%= @group.q_concert %>
                      <% @group.concerts.each do |concert| %>
                        <li> <%= concert.place %>, publico => <%= concert.attendance %>  </li>
                      <%end%>
                    </ul>
                </td>          
              </td> 
            </p>
          </div>
          <div class="card-footer bg-transparent border-success">
            <table class="table table-striped">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Conciertos del mes</th>
                  <th scope="col">Ultimo Concierto</th>
                  <th scope="col">Asistencia Max</th>
                  <th scope="col">Duracion Max</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <th scope="row">1</th>
                  <td><%= @group.concert_this_month %></td>
                  <td><%= @group.last_concert %></td>
                  <td><%= @group.max_attendance %></td>
                  <td><%= @group.max_duration %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

<div>
  <%= link_to "Edit this group", edit_group_path(@group) %> |
  <%= link_to "Back to groups", groups_path %>

  <%= button_to "Destroy this group", @group, method: :delete %>
</div>
