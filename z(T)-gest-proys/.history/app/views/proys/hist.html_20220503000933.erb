<div class="alert alert-info">  
    <%= notice %>
</div>

<form method="get" action="hist">

    <nav class="navbar text-white justify-content-between">
        <a class="navbar-brand">Busqueda de proyectos</a>
        <form class="form-inline bg-gradient text-white ">


                <select class="form-control bg-info text-white" name="estado" id="estado" type="search" >
                    <option disabled selected value=null >Seleccione un Estado </option>
                    <option value="Propuesta"> Propuesta </option>
                    <option value="Agendado"> Agendado </option> 
                    <option value="En Progreso"> En Progreso </option> 
                    <option value="Terminado"> Terminado </option> 
                </select>
            <button class="btn btn-outline-success my-2 my-sm-0"
            type="submit">Buscar</button>
        </form>

    </nav>
      
  
    <table class="table table-striped table-bordered table-hover bg-info bg-gradient text-white">
        <thead>
            <tr th class="v-align-middle text-center"> 
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Fecha Inicio</th>
                <th>Fecha Final</th>
                <th>Estado</th>
                <th>Fecha Registro</th>
                <th>Creado Hace</th>
            </tr>
        </thead>
        <tbody>
            <% @proys.each do |proy| %>
                <tr>
                    <td class="v-align-middle">
                        <%= proy.nombre %>
                    </td>
                    <td class="v-align-middle">
                        <%= proy.descrip %>
                    </td>
                    <td class="v-align-middle">
                        <%= proy.fechini.strftime("%d-%b-%Y") %>
                    </td>
                    <td class="v-align-middle">
                        <%= proy.fechfin.strftime("%d-%b-%Y") %>
                    </td>
                    <td class="v-align-middle">
                        <%= proy.estado %>
                    </td>
                    <td td class="v-align-middle">
                        <%= localize proy.created_at, format: "%d-%B-%Y %H:%M:%S" %>
                    </td>
                    <td td class="v-align-middle">
                        <%= time_ago_in_words(proy.created_at) %>
                    </td>
                </tr>
                <% end %>
        </tbody>
    </table>
</form>

