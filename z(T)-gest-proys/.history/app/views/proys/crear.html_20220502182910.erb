
<form method="get" action="create">

    <div class="container bg-info bg-gradient mt-3 text-white">
        <div class="row">
            <div class="col-md-12">
                <section class="panel">
                    <div class="panel-default badge rounded-pill bg-info mt-3 mb-3">
                        <h3> Creacion de Proyectos </h3>
                    </div>
                    <div class="panel-body" >
                        <div class="form-group mb-3">
                            <label for="nombre" class="negrita">Nombre del Proyecto</label>
                            <div>
                                <input class="form-control" placeholder="Nombre del Proyecto" name="nombre" type="text" id="nombre"  required>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label for="descrip" class="negrita left">Descripcion del Proyecto</label>
                            <div>
                                <input class="form-control" placeholder="Descripcion del Proyecto" name="descrip" type="text" id="descrip" required>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label for="fechini" class="negrita">Fecha Inicio del Proyecto</label>
                            <div>
                                <input class="form-control" placeholder="Fecha Inicio del Proyecto" name="fechini" type="date" id="fechini" required>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label for="fechfin" class="negrita">Fecha Final del Proyecto</label>
                            <div>
                                <input class="form-control" placeholder="Fecha Finaldel Proyecto" name="fechfin" type="date" id="fechfin" required>
                            </div>
                        </div>

                        <div class="form-group mb-3 mt-3" align="center" style="bg-color: light-dark;">
                            <label for="estado" class="negrita">Estado del Proyecto</label>
                            <div align:center > 
                                <select class="form-control" name="estado" id="estado" required>
                                    <option value="Propuesta"> Propuesta </option>
                                    <option value="Agendado"> Agendado </option> 
                                    <option value="En Progreso"> En Progreso </option> 
                                    <option value="Terminado"> Terminado </option> 
                                </select>
                            </div>
                        </div>

                        <button type="submit" class="btn border border-primary text-white-50 bg-secondary mb-3 mt-3">Guardar</button>
                        <%= link_to 'Cancelar', url_for(:back), class: "btn btn-danger"  %>
                    </div>
                </section>
            </div>
        </div>
    </div>
</form>

