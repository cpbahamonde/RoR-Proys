<p style="color: green"><%= notice %></p>

  <div class="card ">
    <div class="card-body">
      <p>
        <strong>Grupo:</strong>
        <%= @concert.group_name %>
      </p>

      <p>
        <strong>Asistentes:</strong>
        <%= @concert.attendance %> Personas
      </p>

      <p>
        <strong>Duracion:</strong>
        <%= @concert.duration %> Horas
      </p>

      <p>
        <strong>Ubicacion:</strong>
        <%= @concert.place %>
      </p>

      <p>
        <strong>Fecha:</strong>
          <%= l @concert.date, format: "%d-%b-%Y" %>
      </p>
    </div>
  </div>


  <div class="d-flex flex-row  justify-content-around">
    <div class="p-2"><%= button_to "Editar Concierto", edit_concert_path(@concert), method: :delete %> </div>
    <div class="p-2"><%= button_to "Volver a Conciertos", concerts_path, method: :delete %></div>
    <div class="p-2"><%= button_to "Eliminar Concierto", @concert, method: :delete %></div>
</div>