<%= form_with(model: group) do |form| %>
  <% if group.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(group.errors.count, "error") %> impiden grabar Grupo:</h2>
      <ul>
        <% group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card ">
    <div class="card-body">
        <div>
          <%= form.label :name, style: "display: block" %>
          <%= form.text_field :name, :required => true  %>
        </div>

        <div>
          <%= form.label :q_crew, style: "display: block" %>
          <%= form.number_field :q_crew, :required => true  %>
        </div>

        <div>
          <%= form.label :debut_date, style: "display: block" %>
          <%= form.date_field :debut_date, :required => true  %>
        </div>

        <div>
          <%= form.label :group_type, style: "display: block" %>
          <%= form.select :group_type, options_for_select(@group_types) %>
        </div>
        <h3>Integrantes</h3>
        <div>
            <%= form.fields_for :crews do |crew| %>
              <%= render "crew_fields", form: crew %>
            <%end%>
        </div>
        <div class="links">
          <%= link_to_add_association "Agregar Integrante", f , :crews %>
        </div>

        <div>
          <br>
          <%= form.submit "Actualizar" %>
        </div>
    </div>
  </div>

<% end %>
