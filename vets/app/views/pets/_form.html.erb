<%= form_with(model: pet) do |form| %>
  <% if pet.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(pet.errors.count, "error") %> no permitieron el registro del paciente:</h2>

      <ul>
        <% pet.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div>
    <%= form.label :cliente, style: "display: block" %>
    <%= form.select :client_id, options_from_collection_for_select(@clients, :id, :name) %>
  </div>
  <br>
  <div>
    <%= form.label :nombre_de_la_mascota, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <br>
  <div>
    <%= form.label :raza, style: "display: block" %>
    <%= form.text_field :race %>
  </div>
  <br>
  <div>
    <%= form.label :Fecha_de_nacimiento, style: "display: block" %>
    <%= form.date_field :date_birth %>
  </div>
  <br>
  <div>
    <%= form.submit value = "Crear ficha paciente" %>
  </div>
<% end %>
