<p style="color: green"><%= notice %></p>

<h1>Pacientes</h1>

<%= link_to "Nuevo paciente", new_pet_path %>
<br>
<br>
<table class="table table-light table-stripped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombre mascota</th>
      <th scope="col">Dueño</th>
      <th scope="col">Raza</th>
      <th scope="col">Fecha de nacimiento</th>
      <th scope="col">Visitas a la veterinaria</th>
      <th scope="col">Ficha médica</th>
    </tr>
  </thead>
  <tbody>
    <% @pets.each do |pet|%>
    <tr>
        <td><%= pet.id %></td>
        <td><%= pet.name %></td>
        <td><%= pet.owner %></td>
        <td><%= pet.race %></td>
        <td><%= pet.date_birth %></td>
        <td><%= pet.visits %></td>
        <td><%= link_to "Ficha", pet_path(pet)%></td>  
    </tr>
    <% end %>  
  <tbody>
</table>
