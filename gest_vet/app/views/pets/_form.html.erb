<%= form_with(model: pet) do |form| %>
  <% if pet.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(pet.errors.count, "error") %> prohibited this pet from being saved:</h2>

      <ul>
        <% pet.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="card text-center ">

    <div class="card-header">
    </div>
    
    <div class="card-body">
      
        <div class="card-text">
          <div>
            <%= form.label :holder, style: "display: block" %>
            <%= form.select :holder_id, options_from_collection_for_select(@holders, :id, :name) %>
          </div>
          <br>

          <div>
            <%= form.label :name, style: "display: block" %>
            <%= form.text_field :name %>
          </div>

          <div>
            <%= form.label :typepet, style: "display: block" %>
            <%= form.text_field :typepet %>
          </div>

          <div>
            <%= form.label :race, style: "display: block" %>
            <%= form.text_field :race %>
          </div>

          <div>
            <%= form.label :birthdate, style: "display: block" %>
            <%= form.date_field :birthdate %>
          </div>
            <br>

          <div class="container px-4">
            <div class="row gx-5">
              <div class="col d-flex justify-content-around col-7">

                <%= link_to "Cancelar", pets_path, class:"btn  btn-sm btn-small btn-outline-dark d-flex align-self-center justify-content-around col-3 "%> 
              </div>
              <div class="col d-flex justify-content-around col-3 ">
                <%= form.submit "Ingresar", class:"btn  btn-sm btn-small btn-outline-success d-flex align-self-center justify-content-around col-6 " %>
              </div>
            </div>

          </div>

        </div>
    </div>

    <div class="card-footer text-muted">
    </div>
  </div>


<% end %>
