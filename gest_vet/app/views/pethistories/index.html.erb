<p style="color: green"><%= notice %></p>


<div id="pethistories">


        <hr max_width=100%  size=5   noshade="noshade">
        <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">

        <div class="container-fluid ">
            <div class="col d-flex justify-content-start col-6 text-success", style="font-weight:bold;font-size:20px;">
            <h2>Consultas</h2>
            </div>
            <div class="col d-flex justify-content-end col-3 ">
                <%= link_to "Crear Consulta", new_pethistory_path, class:"btn  btn-sm btn-small btn-outline-success d-flex align-self-center justify-content-around col-6 "%> 
            </div>
        </div>

        </nav>

        <hr max_width=100%  size=5   noshade="noshade">


    <table class="table table-striped table-bordered table-hover text-decoration-none", style="font-size:15px;">

        <br><!-- 
            <%# < div class="col d-flex justify-content-end col-3 align-middle ">
                <%= search_form_for @q do |f| %>
                    <%# <%= f.select :pet_id, Pet.all.pluck(:name, :id) %> <%#= f.submit %> 
                <%# <% end %> 
            </div>

            <%# <%= search_form_for(@q, url: "/pethistories", method: :get) do |f| %> %>                <%# <%= f.search_field :pet_id, placeholder: 'Search...' %> 
            <%# <% end %> -->

            <thead>
                <tr th class="align-middle text-center text-decoration-none"> 
                    <th scope="col"> # </th>
                    <th scope="col" class="text-decoration-none",style="font-size:12px;" > <%= sort_link(@q, :created_at, "Fecha Consulta")%></th>
                    
                    <th scope="col" > Mascota </th>
                    <th scope="col" > Tipo </th>
                    <th scope="col" > Raza </th>
                    <th scope="col" > Peso </th>
                    <th scope="col" > Altura </th>
                    <th scope="col" > Peso Max </th>
                    <th scope="col" > Peso Prom </th>
                    <th scope="col" > Altura Max </th>
                    <th scope="col" > Altura Prom </th>
                    <th scope="col" > Dueño </th>
                    <th scope="col" > Diagnostico </th>
                </tr>
            </thead>


            <tbody class="text-decoration-none" >
               
                    <% numh = 1 %> 
                    <% @pethistories.each do |pethistory| %>
                         
                            <tr>    
                                <td class="align-middle text-center ">
                                    <%= link_to "#{numh}", edit_pethistory_path(pethistory), class: "btn btn-success btn-sm text-dark bg-light"%>
                                </td>

                                <td class="align-middle text-center">
                                    <h6><strong><%= l pethistory.created_at, format: "%d-%b-%Y" %><h6>
                                </td>
                                <td class="align-middle text-decoration-none text-center ">
                                    <%= link_to "#{pethistory.petname}", pet_path(pethistory.pet_id), class: "btn btn-light btn-sm text-dark"%>
                                </td>
                                <td class="align-middle text-center">
                                    <%= pethistory.petid.typepet %> 
                                </td>
                                <td class="align-middle text-center">
                                    <%= pethistory.petid.race %> 
                                </td>
                                <td class="align-middle text-center">
                                    <%= pethistory.weight %>
                                </td>
                                <td class="align-middle text-center">
                                    <%= pethistory.height %>
                                </td>

                                <td class="align-middle text-center">
                                    <%= "#{'%.1f' % pethistory.petid.weight_max }" %> kilos
                                </td>
                                <td class="align-middle text-center">
                                    <%= "#{'%.1f' % pethistory.petid.weight_avg}" %> kilos
                                </td>
                                <td class="align-middle text-center">
                                    <%= "#{'%.1f' % pethistory.petid.height_max}" %> cms
                                </td>
                                <td class="align-middle text-center">
                                    <%= "#{'%.1f' % pethistory.petid.height_avg}" %> cms
                                </td>  
                                <td class="align-middle text-decoration-none text-center ">
                                    <%= link_to "#{pethistory.owner}", holder_path(pethistory.holder_id), class: "btn btn-light btn-sm text-dark"%>
                                </td>
                                <td class="align-middle">
                                    <%= pethistory.description %>
                                </td>
                                <td class="align-middle">
            
                                        <!-- Protección CSRF -->
                                        <%= token_tag nil %> 
            
                                        <%= button_to "Eliminar", pethistory_path(pethistory), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure?" }, :html => { :method => :delete, :remote => true}, onclick: "return confirmDestroy('Seguro que desea eliminar Consulta seleccionada?')"%>

                                </td>

                            </tr>
                        <% numh += 1 %>
                        
                    <% end %>
                
            </tbody>

    </table>
</div>

  <script>
    function confirmDestroy(message) {
      if (!confirm(message)) {
        return false;
      }
    }
  </script>

  <br>