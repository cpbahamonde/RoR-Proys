<p style="color: green"><%= notice %></p>

<h1>Tags</h1>

<div id="tags">
  <% @tags.each do |tag| %>
    <%= render tag %>
    <p>
      <%= link_to "Show this tag", tag %>
    </p>
  <% end %>
</div>

<%= link_to "New tag", new_tag_path %>



<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div class="table-responsive" id="posts">
  <table  class="table table-success table-striped table-hover table-primary table-bordered table-sm align-middle">
    <thead class="text-center">
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Author</th>
        <th>Tag Quant</th>
        <th>Tags</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.content %></td>
          <td><%= post.author %></td>
          <td><%= post.tags.count %></td>
          <td> <%= post.tags.map(&:title).join(', ') %></td>
          <td class="text-center"><%= link_to 'Show', post %></td>
          <td class="text-center"><%= link_to 'Edit', edit_post_path(post) %></td>
          <td class="text-center"><%= link_to 'Destroy', post, method: :delete, data: {confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>

  <button type="button" class="btn btn-outline-info text-white text-decoration-none" ><%= link_to 'New Post', new_post_path %></button>
