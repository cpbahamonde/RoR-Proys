<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= post.author %>
  </p>

<td><%= post.tags.count %></td>
<td><%= post.tags.map(&:title).join(',') %></td>

</div>
