<div class="table-responsive" id="posts">
  <table  class="table table-success table-striped table-hover table-primary table-bordered table-sm align-middle">
    <thead class="text-center">
<p style="color: green"><%= notice %></p>
<h1>Post Tags</h1>
  <div id="post_tags">
    <table>
      <thead>
        <tr>
          <td>Post tile</td>
          <td>Tag title</td>
          <td>Available</td>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @post_tags.each do |post_tag| %>
          <tr>
            <td><%= post_tag.post.title%></td>
            <td><%= post_tag.tag.title%></td>
            <td><%= post_tag.available%></td>
            <td><%= link_to 'Show', post_tag %></td>
            <td><%= link_to 'Edit', edit_post_tag_path(post_tag) %></td>
            <td><%= link_to 'Destroy', post_tag, method: :delete, data: {confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
  </div>
<%= link_to 'New Post Tag', new_post_tag_path %>
